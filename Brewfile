# Handled via Strap (https://github.com/MikeMcQuaid/strap):
# Install Prereqs: Xcode, brew, cask and pip
# cask is installed via tap, pip comes with brew's python install
tap 'homebrew/core'
tap 'caskroom/cask'

# Packages
brew 'awscli'
brew 'bash'
brew 'bash-completion'
brew 'bash-git-prompt'
brew 'brew-cask-completion'
brew 'csvkit'
brew 'docker'
brew 'docker-compose'
brew 'git'
brew 'jq'
brew 'openssl'
brew 'openvpn'
brew 'python'
brew 'screenresolution'
brew 'thefuck'
brew 'tldr'
brew 'tmux'
brew 'vim'

# Apps
cask 'brave-browser'
cask 'caffeine'
cask 'coconutbattery'
cask 'dbeaver-community'
cask 'dropbox'
cask 'java'
cask 'karabiner-elements'
cask 'pingplotter'
cask 'slack'
cask 'zoom'
